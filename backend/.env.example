# Database
DATABASE_URL=postgresql://trustcore:trustcore@db:5432/trustcore

# Redis (optional - for OAuth state storage)
# If not set, OAuth will use in-memory storage (not recommended for production with multiple instances)
# REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OIDC Configuration
OIDC_ISSUER=https://your-idp.example.com
OIDC_CLIENT_ID=trustcore
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
OIDC_ADMIN_GROUP=admins
OIDC_USER_KEY=sub
OIDC_SCOPE=openid profile email

# CA Configuration
CA_NAME=TrustCore Root CA
CA_COUNTRY=US
CA_STATE=California
CA_LOCALITY=San Francisco
CA_ORGANIZATION=Your Organization
CA_ORGANIZATIONAL_UNIT=IT Department
CA_EMAIL=ca@example.com
CA_VALIDITY_DAYS=7300
CA_KEY_SIZE=4096

# Certificate Defaults
DEFAULT_CERT_VALIDITY_DAYS=365
MAX_CERT_VALIDITY_DAYS=3650
DEFAULT_KEY_SIZE=2048

# CRL & OCSP
CRL_ENABLED=true
CRL_UPDATE_HOURS=24
OCSP_ENABLED=true
OCSP_URL=http://localhost:8000/ocsp

# Application
API_V1_PREFIX=/api/v1
PROJECT_NAME=TrustCore